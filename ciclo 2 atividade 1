# Função para calcular a idade em anos, meses e dias
def calcular_idade_em_anos_meses_dias(dias):
    anos = dias // 365
    meses = (dias % 365) // 30
    dias_restantes = (dias % 365) % 30
    return anos, meses, dias_restantes

# Solicitar a idade em dias do usuário
idade_em_dias = int(input("Digite a idade em dias: "))

# Calcular a idade em anos, meses e dias
anos, meses, dias = calcular_idade_em_anos_meses_dias(idade_em_dias)

# Exibir o resultado
print(f"A idade é de {anos} anos, {meses} meses e {dias} dias.")
